<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/userImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Your Profile Pic"/>

        <TextView
            android:id="@+id/mediaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/userImage"
            android:textSize="40sp"
            tools:text="The app you want to track" />

        <TextView
            android:id="@+id/accountUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mediaName"
            android:layout_toEndOf="@id/userImage"
            android:textSize="30sp"
            tools:text="Your Username" />

        <TextView
            android:id="@+id/accountCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountUsername"
            android:layout_toEndOf="@id/userImage"
            android:textSize="20sp"
            tools:text="Change your caption!" />

        <TextView
            android:id="@+id/accountFollowing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_below="@id/accountCaption"
            android:layout_toEndOf="@id/userImage"
            tools:text="Update your following count" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>